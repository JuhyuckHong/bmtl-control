# MQTT Broker Configuration
# Copy this file to .env and fill in your actual values

# MQTT broker hostname or IP
VITE_MQTT_BROKER_HOST=broker.hivemq.com

# MQTT broker port (WebSocket port, usually 8000 for HiveMQ)
VITE_MQTT_BROKER_PORT=8000

# Protocol (ws for WebSocket, wss for secure WebSocket - use wss for HTTPS sites)
VITE_MQTT_BROKER_PROTOCOL=wss

# MQTT authentication (leave empty if not required)
VITE_MQTT_USERNAME=
VITE_MQTT_PASSWORD=